@model List<ConsumerApp.Models.Product>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Список продуктов</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-5">

        <!-- 🔘 Блок кнопок -->
        <div class="text-center mb-4">
            <a href="https://123-production-cd04.up.railway.app/" target="_blank" class="btn btn-primary mx-2">Сам сайт</a>
            <a href="https://123-production-cd04.up.railway.app/swagger/index.html" target="_blank" class="btn btn-success mx-2">Swagger</a>
            <a href="https://123-production-cd04.up.railway.app/api/ProductApi" target="_blank" class="btn btn-warning mx-2">API</a>
        </div>

        <h1 class="text-center mb-4">Список продуктов</h1>

        @if (Model.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-primary">
                                        @product.Name
                                    </a>
                                </h5>
                                <p class="card-text mb-1"><strong>Цена:</strong> @product.Price ₽</p>
                                <p class="card-text text-muted mb-0">
                                    <strong>Категория:</strong> @(product.Category?.Name ?? "Без категории")
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                Продукты не найдены.
            </div>
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
