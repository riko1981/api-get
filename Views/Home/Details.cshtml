@model ConsumerApp.Models.Product

<h1>@Model.Name</h1>

<p><strong>Описание:</strong> @Model.Description</p>
<p><strong>Цена:</strong> @Model.Price ₽</p>
<p><strong>Категория:</strong> @(Model.Category?.Name ?? "Без категории")</p>
<p><strong>Телефон продавца:</strong> @Model.UserPhoneNumber</p>

<h2>Отзывы</h2>
@if (Model.Reviews != null && Model.Reviews.Any())
{
    <ul>
        @foreach (var review in Model.Reviews)
        {
            <li>
                <strong>@review.UserName</strong> (@review.CreatedAt.ToShortDateString()): @review.Content
            </li>
        }
    </ul>
}
else
{
    <p>Отзывов пока нет.</p>
}

<a asp-action="AddReview" asp-route-id="@Model.Id">Добавить отзыв</a>